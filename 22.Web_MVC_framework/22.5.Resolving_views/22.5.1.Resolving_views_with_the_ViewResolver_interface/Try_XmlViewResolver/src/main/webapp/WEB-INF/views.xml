<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="parent-view" class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/jsp/enroll.jsp" />
    </bean>

    <bean id="error" parent="parent-view">
        <property name="url" value="/WEB-INF/jsp/error.jsp" />
    </bean>

    <bean id="success" parent="parent-view">
        <property name="url" value="/WEB-INF/jsp/success.jsp" />
    </bean>

    <bean id="enroll" parent="parent-view">
        <property name="url" value="/WEB-INF/jsp/enroll.jsp" />
    </bean>
</beans>